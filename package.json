    "svelte",
    "typescript",
    "taliwindcss",
    "rollup"
  ],
  "homepage": "https://github.com/deliberative/website",
  "main": "src/index.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=development rollup --config rollup.config.ts --configPlugin typescript --bundleConfigAsCjs -w",
    "build": "cross-env NODE_ENV=production rollup --config rollup.config.ts --configPlugin typescript --bundleConfigAsCjs",
    "postbuild": "node scripts/postBuild.js",
    "validate": "svelte-check",
    "test": "jest --config jest.config.json",
    "format": "prettier --write src",
    "lint": "eslint --ext .js,.ts,.svelte src",
    "prepublishOnly": "npm-run-all -s test lint",
    "preversion": "npm-run-all -s lint format"
  },
  "dependencies": {
    "history": "^5.2.0",
    "idb": "^7.0.0",
    "svelte": "^3.38.2"
