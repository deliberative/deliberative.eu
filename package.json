    "rollup-plugin-serve": "^2.0.1",
    "rollup-plugin-svelte": "^7.1.0",
    "svelte-check": "^2.2.0",
    "svelte-preprocess": "^4.7.3",
    "tailwindcss": "^3.0.12",
    "terser": "^5.15.1",
