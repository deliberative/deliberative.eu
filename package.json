    "jest": "^29.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "prettier": "^2.3.1",
    "prettier-plugin-svelte": "^2.3.1",
    "rollup": "^3.2.5",
    "rollup-plugin-css-only": "^4.3.0",
