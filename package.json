    "tslib": "^2.3.1",
    "typescript": "^4.3.4"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
